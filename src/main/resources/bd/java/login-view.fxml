<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="ventana" alignment="TOP_CENTER" prefHeight="212.0" prefWidth="350.0" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.java.controllers.LoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="ReservaRadar">
         <font>
            <Font name="SansSerif Bold" size="22.0" />
         </font>
      </Label>
      <ImageView fitHeight="259.0" fitWidth="223.0" pickOnBounds="true" preserveRatio="true" smooth="false">
         <image>
            <Image url="@../../images/usuario.png" />
         </image>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ImageView>
      <Separator prefWidth="200.0" />
      <TextField fx:id="txtCorreo" focusTraversable="false" promptText="Correo electrónico">
         <font>
            <Font name="SansSerif Regular" size="14.0" />
         </font>
      </TextField>
      <Button focusTraversable="false" mnemonicParsing="false" onAction="#ingresarClick" prefHeight="25.0" prefWidth="440.0" text="Ingresar">
         <font>
            <Font name="SansSerif Regular" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Label onMouseClicked="#registrarClick" text="Registrarse como nuevo huésped" textFill="#0026ff" underline="true">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font>
      </Label>
      <Separator prefWidth="200.0" />
      <Label onMouseClicked="#administradorClick" text="Administrador" textFill="#b37011" underline="true">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="SansSerif Regular" size="10.0" />
         </font>
      </Label>
   </children>
</VBox>
